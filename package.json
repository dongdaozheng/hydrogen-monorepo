{
  "name": "hydrogen-monorepo",
  "version": "1.0.0",
  "description": "A monorepo for the Hydrogen app",
  "scripts": {
    "dev": "pnpm -r --parallel dev",
    "dev:lib": "pnpm --filter @repo/lib dev",
    "dev:components": "pnpm --filter @repo/lib dev & pnpm --filter @repo/components dev",
    "dev:app": "pnpm --filter shopify-hydrogen dev",
    "build": "pnpm -r build",
    "build:lib": "pnpm --filter @repo/lib build",
    "build:components": "pnpm --filter @repo/lib build && pnpm --filter @repo/components build",
    "build:app": "pnpm --filter @repo/lib build && pnpm --filter @repo/components build && pnpm --filter shopify-hydrogen build",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "@shopify/hydrogen": "2025.7.0",
    "@shopify/shopify-api": "^12.0.0",
    "cookie": "^1.0.2",
    "graphql": "^16.10.0",
    "isbot": "^5.1.22",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-router": "7.9.2",
    "react-router-dom": "7.9.2",
    "set-cookie-parser": "^2.7.1"
  },
  "devDependencies": {
    "@eslint/compat": "^1.2.5",
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@graphql-codegen/cli": "5.0.2",
    "@react-router/dev": "7.9.2",
    "@react-router/fs-routes": "7.9.2",
    "@shopify/api-codegen-preset": "^1.2.0",
    "@shopify/cli": "3.85.4",
    "@shopify/hydrogen-codegen": "^0.3.3",
    "@shopify/mini-oxygen": "^4.0.0",
    "@shopify/oxygen-workers-types": "^4.1.6",
    "@shopify/prettier-config": "^1.1.2",
    "@tailwindcss/vite": "^4.1.6",
    "@total-typescript/ts-reset": "^0.6.1",
    "@types/eslint": "^9.6.1",
    "@types/react": "^18.2.22",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^8.21.0",
    "@typescript-eslint/parser": "^8.21.0",
    "autoprefixer": "^10.4.21",
    "cssnano": "^7.1.1",
    "esbuild": "^0.25.10",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-import-resolver-typescript": "^3.7.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jest": "^28.11.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.1.0",
    "globals": "^15.14.0",
    "graphql-config": "^5.1.5",
    "graphql-tag": "^2.12.6",
    "prettier": "^3.4.2",
    "tailwindcss": "^4.1.6",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2",
    "vite": "^6.2.1",
    "vite-tsconfig-paths": "^4.3.1"
  },
  "engines": {
