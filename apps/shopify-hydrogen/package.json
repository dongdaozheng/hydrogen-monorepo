{
  "name": "shopify-hydrogen",
  "private": true,
  "sideEffects": false,
  "version": "2025.7.0",
  "type": "module",
  "scripts": {
    "build": "bash build.sh",
    "deploy": "shopify hydrogen deploy",
    "dev": "shopify hydrogen dev --codegen",
    "preview": "pnpm --filter @repo/lib build && pnpm --filter @repo/components build && pnpm --filter @repo/graphql build && shopify hydrogen preview --build",
    "lint": "eslint --no-error-on-unmatched-pattern .",
    "typecheck": "react-router typegen && tsc --noEmit",
    "codegen": "shopify hydrogen codegen && react-router typegen"
  },
  "prettier": "@shopify/prettier-config",
  "dependencies": {
    "@repo/components": "workspace:*",
    "@repo/graphql": "workspace:*",
    "@repo/lib": "workspace:*",
    "@shopify/hydrogen": "2025.7.0",
    "@shopify/shopify-api": "^12.0.0"
  },
  "devDependencies": {
    "vite": "^6.2.1"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "browserslist": [
    "defaults"
  ]
}
